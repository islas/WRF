        "arguments"    : [ "-c", "78" ]
      },
      "dm+sm" :
      {
        "command"      : ".ci/tests/build.sh",
        "arguments"    : [ "-c", "79" ],
        "dependencies" : { "dm" : "afterany" }
      }
    }
  },
  "make-pgi" :
  {
    "steps" :
    {
      "serial" :
      {
        "command"      : ".ci/tests/build.sh",
        "arguments"    : [ "-c", "1" ]
      },
      "sm" :
      {
        "command"      : ".ci/tests/build.sh",
        "arguments"    : [ "-c", "2" ],
        "dependencies" : { "serial" : "afterany" }
      }
    }
  },
