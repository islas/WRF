        "arguments"    : [ "-c", "15" ]
      },
      "dm+sm" :
      {
        "command"      : ".ci/tests/build.sh",
        "arguments"    : [ "-c", "16" ],
        "dependencies" : { "dm" : "afterany" }
      }
    }
  },
  "make-intel-llvm" :
  {
    "hsn.de.hpc"  :
    {
      "timelimit" : "00:40:00"
    },
    "steps" :
    {
      "serial" :
      {
        "command"      : ".ci/tests/build.sh",
        "arguments"    : [ "-c", "76" ]
      },
      "sm" :
      {
        "command"      : ".ci/tests/build.sh",
